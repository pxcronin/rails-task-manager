<h1><%= @task.title %> <%= link_to 'Edit this task', edit_task_path(@task) %></h1>
<h2><%= @task.details %></h1>
<% if @task.completed %>
  <p><%= check_box_tag :completed, 'completed', @task.completed %>This task is completed</p>
<% else %>
  <p><%= check_box_tag :completed, 'completed', @task.completed %>This task is not yet complete</p>
<% end %>
<h2><%= link_to "Delete #{@task.title}",
                  task_path(@task),
                  method: :delete,
                  data: { confirm: "Are you sure?"} %></h2>

<p><%= link_to 'Return to list of tasks', index_path %></p>